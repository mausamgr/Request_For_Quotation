<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_confirm_wizard_form" model="ir.ui.view">
        <field name="name">confirm.wizard.form</field>
        <field name="model">confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <p class="oe_grey" style="margin-bottom: 20px;">
                    <field name="message"/>
                </p>
                <field name="model_id" invisible="1"/>
                <footer>
                    <button string="Yes" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="No" name="action_cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>