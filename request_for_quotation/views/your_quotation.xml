<odoo>
    <!-- Template for Portal Menu Integration -->
    <template id="portal_my_home_menu_save_rfq" name="Portal layout : Purchase menu entries" inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'save_rfq'">
                <a t-att-href="request.env['ir.config_parameter'].sudo().get_param('web.base.url') + '/my/rfq'" 
                   style="text-decoration: none; color: inherit;">
                   Saved RFQs
                </a>
            </li>
        </xpath>
    </template>

    <!-- Template for displaying RFQs -->
    <template id="portal_save_rfq" name="Save RFQ Template">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/my">My Account</a>
                    </li>
                    <li class="breadcrumb-item active">Saved RFQs</li>
                    
                </ul>
            </t>
            <t t-set="title">Your Saved RFQs</t>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>serial number</th>
                            <th>Quotation Date</th>
                            <th>Order Deadline</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="rfqs" t-as="rfq" t-key="rfq.id">
                            <tr>
                                <td><span t-esc="rfq.id"/></td>
                                <td><span t-esc="rfq.date_order"/></td>
                                <td><span t-esc="rfq.order_deadline"/></td>
                                <td class="text-end"><span t-esc="rfq.amount_total"/></td>
                                <td><a t-att-href="'/my/rfq/%d' % rfq.id" class="btn btn-primary btn-sm">View</a></td>
                            </tr>
                        </t>
                        <t t-if="not rfqs">
                            <tr>
                                <td colspan="5" class="text-center">No RFQs found.</td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <!-- Menu for RFQ -->
    <record id="custom_portal_parent" model="website.menu">
        <field name="name">Custom Portal</field>
        <field name="url">/my</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" eval="10"/>
    </record>

    <record id="portal_menu_save_rfq" model="website.menu">
        <field name="name">Saved RFQs</field>
        <field name="url">/my/rfq</field>
        <field name="parent_id" ref="custom_portal_parent"/>
        <field name="sequence" eval="30"/>
    </record>
</odoo>
