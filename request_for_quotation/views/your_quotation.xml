<odoo>
    <template id="portal_my_home_menu_save_rfq" name="Portal layout : Purchase menu entries" inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'save_rfq'">
                <a t-att-href="request.env['ir.config_parameter'].sudo().get_param('web.base.url') + '/my/rfq'" 
                   style="text-decoration: none; color: inherit;">
                   Saved RFQs
                </a>
            </li>
        </xpath>
    </template>


    <template id="portal_save_rfq" name="Save RFQ Template">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/my">My Account</a>
                    </li>
                    <li class="breadcrumb-item active">Saved RFQs</li>
                    
                </ul>
            </t>
            <t t-set="title">Your Saved RFQs</t>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Serial Number</th>
                            <th>Quotation Date</th>
                            <th>Order Deadline</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-log="rfqs"/>
                            <tr>
                                <td>1</td>
                                <td><span t-esc="rfqs['data_order']"/></td>
                                <td><span t-esc="rfqs['date_planned']"/></td>
                                <td>
                                    <a class="btn btn-primary btn-sm">View</a>
                                    <a  class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this RFQ?');">Delete</a>
                                </td>
                            </tr>
                    </tbody>
                </table>
            <div t-if="not rfqs" class="alert alert-info">
                No saved RFQs available.
            </div>
            </div>
        </t>

    </template>
</odoo>