<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_my_home_menu_new_rfq" name="Portal layout: purchase menu entries" inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'new_rfq'">
                <a t-if="order" t-attf-href="/my/purchase?{{ keep_query() }}">Purchase Orders</a>
                <t t-else=""> Request For Quotation/New Request</t>
            </li>
        </xpath>

    </template>

    <!-- <template  -->
     <template id="view_new_request_form" name="New Request Form">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Your Orders</t>
            </t>
            <div class="container row">
                <div class="d-flex col-lg-4 col-xxl-3 border-end my-1 flex-column">
                    <div class="mb-3">
                        <label class="form-label"><strong>From:</strong></label><br/>
                        <label class="form-label"><t t-esc="request.env.company.name"/></label><br/>
                        <label class="form-label"><t t-esc="request.env.company.street"/></label><br/>
                        <label class="form-label">
                            <t t-esc="request.env.company.city"/>, <t t-esc="request.env.company.state_id.name"/>, <t t-esc="request.env.company.zip"/>
                        </label><br/>
                        <label class="form-label"><t t-esc="request.env.company.country_id.name"/></label>
                    </div>
                    <div>
                        <p><strong>Powered by <t t-esc="request.env.company.name"/></strong></p>
                    </div>
                </div>
                <div class="col-12 col-lg-8 col-xxl-9">
                    <h1 style="text-align:center;" class="pb-5">New Order Request</h1>
                    <form method="post" action="/submit/order/request">
                        <div class="row">
                            <div class="col-3">
                                <label for="partner_id" class="form-label me-3"><strong>Customer Name:</strong></label>
                            </div>
                            <div class="col-3">
                                <input type="text" id="partner_id" name="partner_id" class="form-control w-100" readonly="readonly" t-att-value="request.env.user.name"/>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-3">
                                <label for="request_date" class="form-label me-3"><strong>Quotation Date:</strong></label>
                            </div>
                            <div class="col-3">
                                <input type="datetime-local" id="request_date" name="request_date" class="form-control w-100" readonly="readonly"/>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-3">
                                <label for="data_order" class="form-label me-3"><strong>Order Deadline:</strong></label>
                            </div>
                            <div class="col-3">
                                <input type="datetime-local" id="data_order" name="data_order" class="form-control w-100"/>
                            </div>
                        </div>
                        <div class="row mt-2 mb-3">
                            <div class="col-3">
                                <label for="date_planned" class="form-label me-3"><strong>Expected Arrival:</strong></label>
                            </div>
                            <div class="col-3">
                                <input type="datetime-local" id="date_planned" name="date_planned" class="form-control w-100"/>
                            </div>
                        </div>
                        <div class="row pt-3 text-center">
                            <h2><strong>Pricing</strong></h2>
                            <hr class="mt-0" style="border:2px solid black"/>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Products</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Packages</th>
                                    <th scope="col">Unit</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody id="productTableBody">
                                <tr>
                                    <td>
                                        <select id="productSelect" name="product">
                                            <t t-foreach="products" t-as="product">
                                                <option t-att-value="product.id"><t t-out="product.name"/></option>
                                            </t>
                                        </select>
                                    </td>
                                    <td>
                                        <input type="number" name="product_qty" class="form-control" placeholder="Enter quantity"/>
                                    </td>
                                    <td>
                                        <input type="number" name="package" class="form-control" placeholder="Enter a package"/>
                                    </td>
                                    <td>
                                        <input type="text" id="unit_box" class="form-control" placeholder="Unit" readonly="readonly"/>
                                    </td>
                                    <td>
                                        <button type="button" id="add" class="btn btn-primary" style="width:10%">Add More</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="text-center" style="margin-top: 10px;">
                            <button type="submit" class="btn btn-primary">Submit Request</button>
                            <button type="submit" id="save_request" class="btn btn-secondary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>
